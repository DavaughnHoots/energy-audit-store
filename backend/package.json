{
  "name": "energy-audit-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "fix-imports": "node src/scripts/fix-imports.js",
    "build": "rimraf build && tsc && (if [ \"$NODE_ENV\" = \"production\" ]; then cp -r src/migrations build/ && cp -r src/config build/config/ && cp -r src/scripts build/scripts/; else xcopy /E /I src\\migrations build\\migrations && xcopy /E /I src\\config build\\config && xcopy /E /I src\\scripts build\\scripts; fi)",
    "start": "node build/server.js",
    "test": "jest --config jest.config.js --detectOpenHandles",
    "test:watch": "jest --watch --config jest.config.js",
    "test:coverage": "jest --coverage --config jest.config.js",
    "import-products-full": "node src/scripts/import_products_full.js",
    "associate-audits": "node src/scripts/associate_orphaned_audits.js"
  },
  "type": "module",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/handlebars": "^4.1.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.3",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "canvas": "^2.11.2",
    "cookie-parser": "^1.4.7",
    "csv-parse": "^5.5.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "jest": "^29.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.9",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^5.0.5",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
